<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/locationCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="15dp">
        <ImageView
            android:id="@+id/upOrDown"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/uptime"
            android:layout_centerVertical="true" />
        <TextView
            android:layout_marginLeft="15dp"
            android:id="@+id/text_view_bus_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textStyle="bold"
            android:layout_toRightOf="@id/upOrDown"
            android:textSize="12sp"
            android:text="Departure Time: 6:10"
            android:textColor="@android:color/black"/>
        <TextView
            android:layout_marginLeft="15dp"
            android:id="@+id/text_view_bus_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="10sp"
            android:text="Bus Number: 1000"
            android:layout_toRightOf="@id/upOrDown"
            android:layout_below="@id/text_view_bus_time"
           android:textColor="@color/black" />
        <TextView
            android:layout_marginLeft="15dp"
            android:id="@+id/text_view_start_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_bus_id"
            android:layout_toRightOf="@id/upOrDown"
            android:text="Route: Shibbari to Curzon"
            android:textStyle="bold"
            android:textSize="10sp"
            android:textColor="@color/dark_grey_color"
            tools:ignore="SmallSp" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>
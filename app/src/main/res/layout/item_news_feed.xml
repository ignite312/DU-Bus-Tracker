<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    android:id="@+id/scheduleCardView"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_with_border"
            android:padding="5dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/photo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:src="@drawable/spectre" />

            <LinearLayout
                android:id="@+id/top1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/photo"
                android:orientation="horizontal">

                <TextView
                    android:fontFamily="@font/montserrat_bold"
                    android:id="@+id/username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Emon"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/deptName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="0dp"
                    android:text="CSE 20-21"
                    android:textColor="@color/green"
                    android:textSize="10sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/userType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="0dp"
                    android:text="Developer"
                    android:textColor="#FF0000"
                    android:textSize="10sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/top2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/top1"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/photo"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/busNameUserType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"

                    android:layout_marginTop="0dp"
                    android:text="Admin â€¢ Khonika"
                    android:textColor="#3F51B5"
                    android:textSize="10sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/postDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="0dp"
                    android:text="22 Sept 22, 01:45"
                    android:textColor="@color/dark_grey_color"
                    android:textSize="10sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/top2"
                android:layout_gravity="left"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@id/photo"
                android:text="Need Help Badly"
                android:fontFamily="@font/montserrat_semibold"
                android:textColor="@color/black"
                android:textIsSelectable="true"
                android:textSize="16dp"
                android:textStyle="bold" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

        </LinearLayout>

        <TextView
            android:fontFamily="@font/montserrat_semibold"
            android:id="@+id/desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:text="@string/demo_post"
            android:textColor="@color/dark_grey_color"
            android:textIsSelectable="true"
            android:textSize="12sp" />
        <LinearLayout
            android:layout_marginLeft="5dp"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <!-- Vote Count TextView -->
            <TextView android:id="@+id/voteCount"
                android:layout_marginTop="1dp"
                android:text="-77"
                android:textColor="#009688"
                android:layout_width="wrap_content"
                android:layout_height="20sp"
                android:textSize="13sp"
                android:gravity="center_vertical"/>

            <!-- Upvote Button -->
            <ImageView
                android:id="@+id/upvoteImageView"
                android:layout_marginLeft="2dp"
                android:layout_width="wrap_content"
                android:layout_height="20sp"
                android:clickable="true"
                android:src="@drawable/arrow_upward"
                android:contentDescription="Upvote" />

            <!-- Downvote Button -->
            <ImageView
                android:id="@+id/downVoteImageView"
                android:layout_marginLeft="1dp"
                android:layout_width="wrap_content"
                android:layout_height="20sp"
                android:clickable="true"
                android:src="@drawable/arrow_downward"
                android:contentDescription="Downvote" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
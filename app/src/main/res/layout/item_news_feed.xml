<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scheduleCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_with_border"
            android:padding="5dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/photo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/selector_button_circle" />

            <RelativeLayout
                android:id="@+id/top1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/photo"
                android:gravity="left"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:background="@drawable/selector_button_rectangle"
                    android:fontFamily="@font/montserrat_bold"
                    android:gravity="left"
                    android:text="Emon"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/deptName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginStart="6dp"
                    android:layout_toEndOf="@id/username"
                    android:text="CSE 20-21"
                    android:textColor="@color/green"
                    android:textSize="10sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/userType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginStart="5dp"
                    android:layout_toEndOf="@id/deptName"
                    android:gravity="center"
                    android:text="Developer"
                    android:textColor="#FF0000"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    tools:ignore="SmallSp" />

                <FrameLayout
                    android:id="@+id/approvalFrame"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="40dp"
                    android:layout_toLeftOf="@id/threeDotImageView"
                    android:background="@drawable/border_box"
                    android:padding="5dp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/approval"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_light"
                        android:text="Approved"
                        android:textColor="@color/green"
                        android:visibility="gone" />
                </FrameLayout>


                <ImageView
                    android:id="@+id/threeDotImageView"
                    android:layout_width="12sp"
                    android:layout_height="12sp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/selector_button_rectangle"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/more" />
            </RelativeLayout>


            <LinearLayout
                android:id="@+id/top2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/top1"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/photo"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/busNameUserType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"

                    android:layout_marginTop="0dp"
                    android:text="Admin â€¢ Khonika"
                    android:textColor="#3F51B5"
                    android:textSize="10sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/postDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="0dp"
                    android:text="22 Sept 22, 01:45"
                    android:textColor="@color/dark_grey_color"
                    android:textSize="10sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/top2"
                android:layout_gravity="left"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@id/photo"
                android:fontFamily="@font/montserrat_semibold"
                android:text="Need Help Badly"
                android:textColor="@color/black"
                android:textIsSelectable="true"
                android:textSize="16dp"
                android:textStyle="bold" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        </LinearLayout>

        <TextView
            android:id="@+id/desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/montserrat_semibold"
            android:text="@string/demo_post"
            android:textColor="@color/dark_grey_color"
            android:textIsSelectable="true"
            android:textSize="12sp" />

        <RelativeLayout
            android:id="@+id/upDownReport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:padding="8dp">

            <TextView
                android:id="@+id/voteCount"
                android:layout_width="wrap_content"
                android:layout_height="20sp"
                android:layout_marginTop="1dp"
                android:gravity="center_vertical"
                android:text="-77"
                android:textColor="#009688"
                android:textSize="13sp" />

            <!-- Upvote Button -->
            <ImageView
                android:id="@+id/upvoteImageView"
                android:layout_width="wrap_content"
                android:layout_height="20sp"
                android:layout_marginLeft="2dp"
                android:layout_toRightOf="@id/voteCount"
                android:clickable="true"
                android:contentDescription="Upvote"
                android:src="@drawable/arrow_upward" />

            <!-- Downvote Button -->
            <ImageView
                android:id="@+id/downVoteImageView"
                android:layout_width="wrap_content"
                android:layout_height="20sp"
                android:layout_marginStart="1dp"
                android:layout_toRightOf="@id/upvoteImageView"
                android:clickable="true"
                android:contentDescription="Downvote"
                android:src="@drawable/arrow_downward" />

            <!-- Comment ImageView (Rightmost) -->
            <ImageView
                android:id="@+id/commentImageViewFeed"
                android:layout_width="wrap_content"
                android:layout_height="20sp"
                android:layout_alignParentEnd="true"
                android:layout_gravity="end"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/baseline_comment_24" />
        </RelativeLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>